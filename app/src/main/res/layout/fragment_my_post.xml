            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="힐링" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_mypost"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>

